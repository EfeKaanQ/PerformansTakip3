@model IEnumerable<PerformansTakip.Models.Sinif>

<h1 style="font-size: 32px; font-weight: bold; margin-bottom: 20px;">Sınıf Listesi</h1>

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(100px, 1fr)); gap: 15px;">
    @foreach (var sinif in Model)
    {
        <a href="@Url.Action("Detay", "Sinif", new { id = sinif.Id })"
           style="
                display: block;
                padding: 15px;
                text-align: center;
                text-decoration: none;
                background-color: #f0f0f0;
                border-radius: 10px;
                font-weight: bold;
                color: #2a2a2a;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                transition: all 0.2s ease-in-out;
            "
           onmouseover="this.style.backgroundColor='#d0e7ff'; this.style.transform='scale(1.05)'"
           onmouseout="this.style.backgroundColor='#f0f0f0'; this.style.transform='scale(1)'">
            @sinif.Ad
        </a>
    }
</div>
