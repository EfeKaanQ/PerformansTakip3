@model IEnumerable<PerformansTakip.Models.Sinif>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mesaj"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Hoş Geldiniz, @ViewBag.OgretmenAdSoyad</h3>
        <div>
            <a href="@Url.Action("SinifEkle", "Ogretmen")" class="btn btn-primary">Yeni Sınıf Ekle</a>
            <a href="@Url.Action("OgrenciEkle", "Ogretmen")" class="btn btn-success ms-2">Yeni Öğrenci Ekle</a>
        </div>
    </div>

    <div class="row g-3">
        @foreach (var sinif in Model)
        {
            <div class="col-md-3">
                <div class="card bg-light border">
                    <div class="card-body p-3">
                        <h5>@sinif.Ad</h5>
                        <div class="text-muted mb-2">
                            Öğrenci Sayısı: @sinif.Ogrenciler.Count
                        </div>
                        <div class="mb-2">
                            Durum: 
                            @if (sinif.Ogrenciler.Any())
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Boş</span>
                            }
                        </div>
                        <a href="@Url.Action("SinifDetay", "Ogretmen", new { id = sinif.Id })" 
                           class="btn btn-info btn-sm text-white w-100">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 