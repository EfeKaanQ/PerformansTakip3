@model IEnumerable<PerformansTakip.Models.Sinif>

@{
    ViewData["Title"] = "Öğretmen Paneli";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Hoş Geldiniz, @ViewBag.OgretmenAdSoyad</h1>
        <div>
            <a href="@Url.Action("SinifEkle")" class="btn btn-primary me-2">Yeni Sınıf Ekle</a>
            <a href="@Url.Action("OgrenciEkle")" class="btn btn-success">Yeni Öğrenci Ekle</a>
        </div>
    </div>

    <div class="row">
        @foreach (var sinif in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@sinif.Ad</h5>
                        <p class="card-text">
                            <strong>Öğrenci Sayısı:</strong> @sinif.Ogrenciler.Count<br>
                            <strong>Durum:</strong> 
                            @if (sinif.Ogrenciler.Count > 0)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Boş</span>
                            }
                        </p>
                        <a href="@Url.Action("SinifDetay", new { id = sinif.Id })" class="btn btn-info">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç sınıfınız bulunmamaktadır. Yeni bir sınıf ekleyerek başlayabilirsiniz.
        </div>
    }
</div> 