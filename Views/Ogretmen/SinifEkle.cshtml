@model PerformansTakip.Models.Sinif

@{
    ViewData["Title"] = "Yeni Sınıf Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Yeni Sınıf Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="SinifEkle" method="post">
                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label">Sınıf Adı</label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: 9-A" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Sınıf Ekle</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 