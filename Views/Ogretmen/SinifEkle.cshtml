@model PerformansTakip.Models.Sinif

@{
    ViewData["Title"] = "Yeni Sınıf Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Yeni Sınıf Ekle</h3>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }
                    
                    <form method="post" action="/Ogretmen/SinifEkle">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label for="Ad" class="form-label">Sınıf Adı</label>
                            <input type="text" class="form-control" id="Ad" name="Ad" placeholder="Örn: 9-A" required />
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Sınıf Ekle</button>
                            <a href="/Ogretmen/Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 