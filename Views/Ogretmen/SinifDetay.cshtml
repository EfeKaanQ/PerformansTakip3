@model PerformansTakip.Models.Sinif

@{
    ViewData["Title"] = Model.Ad;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0">@Model.Ad</h4>
            <div class="text-muted">
                Öğrenci Sayısı: @Model.Ogrenciler.Count
            </div>
        </div>
        <div>
            <a href="@Url.Action("OgrenciEkle", "Ogretmen", new { sinifId = Model.Id })" class="btn btn-success me-2">Yeni Öğrenci Ekle</a>
            <a href="@Url.Action("Index", "Ogretmen")" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>

    @if (Model.Ogrenciler != null && Model.Ogrenciler.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ogrenci in Model.Ogrenciler)
                    {
                        <tr>
                            <td>@ogrenci.Id</td>
                            <td>@ogrenci.Ad</td>
                            <td>@ogrenci.Soyad</td>
                            <td>
                                <button type="button" class="btn btn-info btn-sm me-2" data-bs-toggle="collapse" data-bs-target="#ogrenciDetay-@ogrenci.Id">
                                    Detaylar
                                </button>
                                <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="collapse" data-bs-target="#ogrenciListe-@ogrenci.Id">
                                    Listeyi Görüntüle
                                </button>
                                <form method="post" action="@Url.Action("OgrenciSil", "Ogretmen")" 
                                      style="display: inline;" 
                                      onsubmit="return confirm('Bu öğrenciyi silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@ogrenci.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                        <!-- Öğrenci Detay Satırı -->
                        <tr>
                            <td colspan="4" class="p-0">
                                <div class="collapse" id="ogrenciDetay-@ogrenci.Id">
                                    <div class="card card-body border-0">
                                        <h6 class="mb-3">Öğrenci Bilgileri</h6>
                                        <div class="row">
                                            <div class="col-md-3">
                                                <strong>Öğrenci ID:</strong> @ogrenci.Id
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Ad:</strong> @ogrenci.Ad
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Soyad:</strong> @ogrenci.Soyad
                                            </div>
                                            <div class="col-md-3">
                                                <strong>Sınıf:</strong> @Model.Ad
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <!-- Günlük Liste Satırı -->
                        <tr>
                            <td colspan="4" class="p-0">
                                <div class="collapse" id="ogrenciListe-@ogrenci.Id">
                                    <div class="card card-body border-0">
                                        <h6 class="mb-3">Günlük Takip</h6>
                                        <form method="post" action="@Url.Action("OgrenciGuncelle", "Ogretmen")">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@ogrenci.Id" />
                                            <div class="row align-items-center">
                                                <div class="col-md-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="forma-@ogrenci.Id" 
                                                               name="formaGiydi" @(ogrenci.FormaGiydi ? "checked" : "")>
                                                        <label class="form-check-label" for="forma-@ogrenci.Id">
                                                            Forma
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="odev-@ogrenci.Id" 
                                                               name="odevYapti" @(ogrenci.OdevYapti ? "checked" : "")>
                                                        <label class="form-check-label" for="odev-@ogrenci.Id">
                                                            Ödev
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="input-group input-group-sm">
                                                        <span class="input-group-text">Sınav Notu</span>
                                                        <input type="number" class="form-control" name="sinavNotu" 
                                                               value="@ogrenci.SinavNotu" min="0" max="100">
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="input-group input-group-sm">
                                                        <span class="input-group-text">Not</span>
                                                        <input type="text" class="form-control" name="gunlukNot" 
                                                               value="@ogrenci.GunlukNot" placeholder="Günlük not...">
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        Kaydet
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Bu sınıfta henüz öğrenci bulunmamaktadır.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Bootstrap collapse işlevselliği
            $('.collapse').on('show.bs.collapse', function () {
                // Diğer açık olan collapse'ları kapat
                $('.collapse.show').not(this).collapse('hide');
            });
        });
    </script>
} 