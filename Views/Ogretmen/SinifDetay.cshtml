@model PerformansTakip.Models.Sinif

@{
    ViewData["Title"] = $"{Model.Ad} Sınıfı Detayları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Ad Sınıfı</h1>
        <div>
            <a href="@Url.Action("OgrenciEkle")" class="btn btn-success">Yeni Öğrenci Ekle</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Geri Dön</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Öğrenci Listesi</h3>
        </div>
        <div class="card-body">
            @if (Model.Ogrenciler.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ogrenci in Model.Ogrenciler)
                            {
                                <tr>
                                    <td>@ogrenci.Id</td>
                                    <td>@ogrenci.Ad</td>
                                    <td>@ogrenci.Soyad</td>
                                    <td>
                                        <span class="badge bg-success">Aktif</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Bu sınıfta henüz öğrenci bulunmamaktadır.
                </div>
            }
        </div>
    </div>
</div> 